<title>회원 로그인 페이지</title>
<script src="http://code.jquery.com/jquery-Latest.js"></script>
<link rel="stylesheet" href="css/style.css" type="text/css">
<script type="text/javascript">
	
// 아이디 비밀번호 일치 / 불일치 체크	
	$(function(){
		var checkId = $("#checkId").val();
		if(checkId) {
			alert(checkId);
		}
	});
	
	// 아이디 비밀번호 찾기 팝업
	function searchPopUp() {
		var screenW = screen.availWidth;	// 스크린 가로사이즈
		var screenH = screen.availHeight;	// 스크린 세로사이즈
		var popW = 650;	// 띄울창의 가로사이즈
		var popH = 350; // 띄울창의 세로사이즈
		var posL = (screenW-popW)/ 2;	// 띄울창의 가로 포지션
		var posT = (screenH-popH)/ 2;	// 띄울창의 세로 포지션
		window.open("memberSearchId", "정보찾기", "width="+ popW + ", height="+ popH + ",top="+ posT + ",left=" + posL + ",scrollbars=no, menubar=no, toolbar=no, status=no, location=no, resizable=no");
	}
</script>
</head>

