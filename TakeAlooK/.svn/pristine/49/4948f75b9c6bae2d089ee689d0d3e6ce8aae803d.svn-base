<body th:align="center">
	<br><br><br><br>
	<input type="hidden" th:value="${msg}" id="checkId">
	<h1 align="center">User Login</h1>
	<form action="/memberLogin.Do" method="post">
		<div align="center"><br>
			<p><input type="button" value="개인회원"> | <a href="companyLogin"><input type="button" value="기업회원"></a></p><br>
			<label for="id" class="screen_out">ID :</label> <input type="text" name="id" placeholder="ID" required="required"><br>
			<label for="pw" class="screen_out">PASSWORD :</label> <input type="password" name="password" placeholder="PASSWORD" required="required"><br>
			
			<p>
