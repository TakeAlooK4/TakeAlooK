	@Override
	public void commentWrite(Ccomment ccomment) {
		ccommentRepo.save(ccomment);
	}

	@Override
	public void commentUpdate(Ccomment ccomment) {
		Ccomment findComment = ccommentRepo.findById(ccomment.getCmentNo()).get();
