<meta charset="UTF-8">
<title>회원 로그인 페이지</title>
<script src="http://code.jquery.com/jquery-Latest.js"></script>
<link rel="stylesheet" href="css/style.css" type="text/css">
<script type="text/javascript">
// 아이디 비밀번호 일치 / 불일치 체크
	$(function(){
		var checkId = $("#checkId").val();
		if(checkId) {
			alert(checkId);			
		}
	});
	
// 기업아이디 비밀번호 찾기 팝업
	function searchPopUp() {
		var screenW = screen.availWidth;	// 스크린 가로사이즈
		var screenH = screen.availHeight;	// 스크린 세로사이즈
		var popW = 650;	// 띄울창의 가로사이즈
		var popH = 350; // 띄울창의 세로사이즈
		var posL = (screenW-popW)/ 2;	// 띄울창의 가로 포지션
		var posT = (screenH-popH)/ 2;	// 띄울창의 세로 포지션
		window.open("companySearchId", "정보찾기", "width="+ popW + ", height="+ popH + ",top="+ posT + ",left=" + posL + ",scrollbars=no, menubar=no, toolbar=no, status=no, location=no, resizable=no");
	}
	
</script>
<style type="text/css">
	.userbtn{
		background-color: #f6e4c4;
		border: none;
		color: #808080;
		text-align: center;
		padding: 5px 27px;
		font-size: 15px;
	}
	
	
	.companybtn{
		background-color: #f6e4c4;
		border: none;
		color: #808080;
		text-align: center;
		padding: 5px 27px;
		font-size: 15px;
		font-weight: bold;
	}
	.submitbtn{
		background-color: #f6e4c4;
		border: none;
		color: #808080;
		text-align: center;
		padding: 10px 102px;
	}
	
	.cfindInfo{
		color: #808080;
		font-weight: bold;
	}
	
	.cSignUp{
		color: #808080;
		font-weight: bold;
	}
	
	input[type="text"],select, input[type="password"] {
   /*  display: block; */
    width: 13%;
    height: 34px;
   /*  padding: 6px 12px; */
    font-size: 14px;
    /* line-height: 1.42857143; */
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
 }
</style>
</head>

