<body th:align="center">
	<br><br><br><br>
	<input type="hidden" th:value="${msg}" id="checkId">	
	<h1 align="center">Company Login</h1><br><br>
	<form action="/companyLogin.do" method="post">
		<div align="center">
			<p><a href="memberLogin"><input type="button" value="개인회원" class="userbtn"></a> | <input type="button" value="기업회원" class="companybtn"></p><br>
				<input type="text" name="cNo" placeholder="COMPANY NO" required="required"><br>
				<input type="password" name="cPassword" placeholder="PASSWORD" required="required"><br>
		<p align="center">
			<br><input type="submit" value="Login" class="submitbtn">
		</p>
		<p><br><a href="/companyLogin" onclick="javascript:searchPopUp();" class="cfindInfo">아이디 / 비밀번호 찾기 | </a><a href="companySignUp" class="cSignUp">회원가입</a></p>
		</div>
	</form>
