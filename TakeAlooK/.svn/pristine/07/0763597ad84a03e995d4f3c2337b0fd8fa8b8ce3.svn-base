<script type="text/javascript">
	
	// 아이디 유효성 검사 (1 = 중복 / 0 != 중복)
	$("#id").blur(function() {
		var id = $('#id').val();
		$.ajax({
			
		});
	});
	
	// 회원가입 알림창
	$(function(){
		$("#signUpSuccess").click(function(){
		alert("회원가입이 완료되었습니다.");		
		});
	});
	
	
	
	// 비밀번호 일치 불일치 검사
	$(function(){
		$("#alert-success").hide();
		$("#alert-danger").hide();
		$("#alert-success").css("color", "blue")
		$("#alert-danger").css("color", "red")
		$("input").keyup(function(){
			var pw1=$("#pw1").val();
			var pw2=$("#pw2").val();
			if(pw1 != "" || pw2 != ""){
				if(pw1 == pw2){
					$("#alert-success").show();
					$("#alert-danger").hide();
					
					$("#signUpSuccess").removeAttr("disabled");
				} else if(pw1 == "" || pw2 == ""){
					$("#alert-success").hide();
					$("#alert-danger").hide();
				}
				else{
					$("#alert-success").hide();
					$("#alert-danger").show();
					$("#signUpSuccess").attr("disabled", "disabled");
				}
			}
		});
	});
	
</script>
</head>
<body>
	<header class="headerMenu">
		<div class="wrapper">
			<h1 class="pageName"><a href="/">Take A looK</a></h1>
				<ul class="menu">
